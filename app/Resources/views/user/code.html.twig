{% endblock %}

{% block content %}
    <h1 class="sub-header">用户注册码管理</h1>
    <a href="{{ path('user_index') }}" class="button button-rounded button-inverse">返回</a>
    <br><br><br>
    <form class="form-inline" action="{{ path('user_codeEdit') }}" method="post">
        <div class="form-group">
            <label for="codigo">新密码</label>
            <input type="number" step="0.01" class="form-control" id="codigo" name="codigo" placeholder="codigo" required="required">
        </div>
        <button type="submit" class="btn btn-inverse">确定修改</button>
    </form>
    <br>
    {% for flashMessage in app.session.flashbag.get('notice') %}

        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>

    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('success') %}

        <div class="alert alert-success">
            {{ flashMessage }}
        </div>

    {% endfor %}
    <h4>密码需设定为任意位数的数字（不可使用字母）.</h4>
    <br>
    <div class="col-xs-4">
        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th>当前用户注册验证码</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ key }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}