{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/shop/css/header.css') }}">
{% endblock %}

<div class="container">
    <div class="topHeader">
        <div class="topHeaderCont clearfix">
            <div class="toplogo">
                <a>Bienvenido a fantasybis.es </a>
                {% if userNow is defined and userNow %}
                    <a href="" class=""><i class="fa fa-user" aria-hidden="true"></i> &nbsp;Hola, {{ userNow.username }}</a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}" class=""><i class="fa fa-user" aria-hidden="true"></i> &nbsp;Iniciar Sesi√≥n</a>
                {% endif %}
                <a href="{% if userNow is defined and userNow %}{{ path('shop_pedido') }}{% else %}{{ path('fos_user_security_login') }}{% endif %}"><i class="fa fa-book" aria-hidden="true"></i> &nbsp;Mis Pedidos</a>
                <a href="{{ path('shop_cart') }}" class=""><i class="fa fa-shopping-bag"></i> &nbsp;Mi Cesta</a>
            </div>
        </div>
    </div>
    <br><br><br>
    <div class="nav">
        <div class="centerlogo">
            <a href="/"><img id="centerlogo" src="{{ asset('bundles/shop/img/logo.png') }}"></a>
        </div>
        <div class="menu">
            <ul class="category">
                <li class="nuevo"><a href="{{ path('shop_productList_new') }}">NOVEDADES</a></li>
                {% for category in categories %}
                    <li class=""><a href="{{ path('shop_productList', { 'category': category.id }) }}">{{ category.categoryNameEs }}</a></li>
                {% endfor %}
            </ul>
            <div id="header_search_wrapper_desktop">
                <div id="header-search" class="skip-content">
                    <form id="search_mini_form" action="" method="get">
                        <div class="form-search">
                            <label for="search"><span class="icon icon-search">Buscar</span></label>
                            <input id="search" type="text" name="q" placeholder=" " value="" class="input-text ff-basic-autocomplete" autocomplete="off">
                            <button type="submit" title="Search" class=""><span><i class="fa fa-search" aria-hidden="true"></i></span></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <hr class="featurette-divider">
    <br>
</div>
